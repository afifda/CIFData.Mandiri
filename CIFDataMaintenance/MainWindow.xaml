<Window x:Class="CIFDataMaintenance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="565" Width="570">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Action">
                    <MenuItem x:Name="CusInsMenu" Header="_Custom Insert" Click="CusInsMenu_Click" />
                    <Separator />
                    <MenuItem Header="_Exit" />
                </MenuItem>
            </Menu>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <Label Content="Excel File:" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="120" Height="29" FontSize="14"/>
        <TextBox x:Name="attachTxtBox" HorizontalAlignment="Left" Height="29" Margin="135,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="333"/>
        <Button x:Name="uploadBtn" Content="" HorizontalAlignment="Left" Margin="473,87,0,0" VerticalAlignment="Top" Width="34" Height="29" Click="uploadBtn_Click"/>
        <Button x:Name="migrateBtn" Content="Start Migrating" HorizontalAlignment="Left" Margin="135,215,0,0" VerticalAlignment="Top" Width="111" Height="41" Click="migrateBtn_Click"/>
    </Grid>
</Window>
